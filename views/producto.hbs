{{> header }}

<body style="width: 98.9vw; height:100vh">
    
    <section class="menuBar">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Productos</a>
            {{> menu}}
        </nav>
    </section>

    <section style="justify-content:center; width:100%; margin-bottom: 100px;">
        <section style="justify-content:center; width:80%; margin:auto;">
            <div class="form-group row">
                <label  class="col-sm-1 col-form-label">Cantidad:</label>
                <label  class="col-sm-3 col-form-label">Nombre:</label>
                <label  class="col-sm-3 col-form-label">Imagen:</label>
            </div>
            <form action="producto/crearProducto" method="POST">
                <div class="form-group row">
                    <input hidden class="form-control" name="id_proyecto" value="{{id}}" required>
                    <div class="col-sm-1">
                        <input class="form-control" name="cantidad" value="" placeholder="Cant" required>
                    </div>
                    <div class="col-sm-3">
                        <input class="form-control" name="producto" value="" placeholder="Nombre" required>
                    </div>
                    <div class="col-sm-3">
                        <select class="custom-select custom-select-lg mb-3" name="imagen" id="">
                            <option value="">Selecciona</option>
                            {{#each archivos}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <button type="submit" class="col-sm-1 btn btn-success">Nuevo</button>
                </div>
            </form>
            {{#each type}}
                <hr>
                <form action="producto/actualizarProducto" method="POST">
                    <div class="form-group row">
                        <input hidden class="form-control" name="id_producto" value="{{id_producto}}" required>
                        <input hidden class="form-control" name="id_proyecto" value="{{id_proyecto}}" required>
                        <div class="col-sm-1">
                            <input class="form-control" name="cantidad" value="{{cantidad}}" required>
                        </div>
                        <div class="col-sm-3">
                            <input class="form-control" name="producto" value="{{producto}}" required>
                        </div>
                        <div class="col-sm-3">
                            <select class="custom-select custom-select-lg mb-3" name="imagen" id="">
                                <option value="{{imagen}}">{{imagen}}</option>
                                {{#each ../archivos}}
                                <option value="{{this}}">{{this}}</option>
                                {{/each}}
                            </select>
                        </div>
                        <button type="submit" class="col-sm-1 btn btn-warning">Modificar</button>
                    </div>
                </form>
                <form action="elemento" method="GET">
                    <div class="form-group row">
                        <input hidden class="form-control" name="id_producto" value="{{id_producto}}" required>
                        <input hidden class="form-control" name="id_proyecto" value="{{id_proyecto}}" required>
                        <label  class="col-sm-7 col-form-label"></label>
                        <button type="submit" class="col-sm-1 btn btn-primary">Materiales</button>
                    </div>
                </form>
                <form action="caracteristica" method="GET">
                    <div class="form-group row">
                        <input hidden class="form-control" name="id_producto" value="{{id_producto}}" required>
                        <input hidden class="form-control" name="id_proyecto" value="{{id_proyecto}}" required>
                        <label  class="col-sm-7 col-form-label"></label>
                        <button type="submit" class="col-sm-1 btn btn-info">Caracter√≠sticas</button>
                    </div>
                </form>
                <form action="producto/eliminarProducto" method="POST">
                    <div class="form-group row">
                        <input hidden class="form-control" name="id_producto" value="{{id_producto}}" required>
                        <input hidden class="form-control" name="id_proyecto" value="{{id_proyecto}}" required>
                        <label  class="col-sm-7 col-form-label"></label>
                        <button type="submit" class="col-sm-1 btn btn-danger">Eliminar</button>
                    </div>
                </form>
            {{/each}}
        </section>
    </section>
</body>

{{> footer}}