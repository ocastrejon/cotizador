{{> header }}

<body style="width: 98.9vw; height:100vh">
    
    <section class="menuBar">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Medidas</a>
            {{> menu}}
        </nav>
    </section>

    <section style="justify-content:center; width:100%; margin-bottom: 100px;">
        <section style="justify-content:center; width:80%; margin:auto;">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Largo</label>
                <label class="col-sm-3 col-form-label">Ancho</label>
                <label class="col-sm-3 col-form-label">Grosor</label>
            </div>
            <form action="medida/crearMedida" method="POST">
                <div class="form-group row">
                    <div class="col-sm-2">
                        <input class="form-control" name="largo" value="" placeholder="Largo (Ft.)" required>
                    </div>
                    <label  class="col-sm-1 col-form-label">X</label>
                    <div class="col-sm-2">
                        <input class="form-control" name="ancho" value="" placeholder="Ancho (In.)" required>
                    </div>
                    <label  class="col-sm-1 col-form-label">X</label>
                    <div class="col-sm-2">
                        <input class="form-control" name="grosor" value="" placeholder="Grosor (In.)" required>
                    </div>
                    <button type="submit" class="col-sm-1 btn btn-success">Nuevo</button>
                </div>
            </form>
            {{#each type}}
                <hr>
                <form action="medida/actualizarMedida" method="POST">
                    <div class="form-group row">
                        <input hidden class="form-control" name="id_medida" value="{{id_medida}}" required>
                        <div class="col-sm-2">
                            <input class="form-control" name="largo" value="{{largo}}" required>
                        </div>
                        <label  class="col-sm-1 col-form-label">X</label>
                        <div class="col-sm-2">
                            <input class="form-control" name="ancho" value="{{ancho}}" required>
                        </div>
                        <label  class="col-sm-1 col-form-label">X</label>
                        <div class="col-sm-2">
                            <input class="form-control" name="grosor" value="{{grosor}}" required>
                        </div>
                        <button type="submit" class="col-sm-1 btn btn-warning">Modificar</button>
                    </div>
                </form>
                <form action="medida/eliminarMedida" method="POST">
                    <div class="form-group row">
                        <input hidden class="form-control" name="id_medida" value="{{id_medida}}" required>
                        <label  class="col-sm-8 col-form-label"></label>
                        <button type="submit" class="col-sm-1 btn btn-danger">Eliminar</button>
                    </div>
                </form>
            {{/each}}
        </section>
    </section>
</body>

{{> footer}}